{{#each errors}}
    <div class="alert alert-danger">{{text}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/each}}


<div class="card card-body mx-5">
    <h3>Account Register</h3>
    <form action="" method="POST"> 
        <div class="form-group">
            <label for="text">Name</label>
            <input class="form-control" type="name" name="name" value="{{name}}" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="email" name="email" value="{{email}}" required>
        </div>
        <div class="form-group">
            <label for="password1">Password</label>
            <input class="form-control" type="password" name="password1" value="{{password}}" required>
        </div>
        <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input class="form-control" type="password" name="password2" required>
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
    </form>
</div>